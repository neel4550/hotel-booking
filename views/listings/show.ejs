<% layout ("/layout/boilerplate.ejs") %>
<body>
    <div class="row">
    <div class="col-8 offset-3">
    <h3>Villa details:</h3>
    </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listingdetails.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
              <p class="card-text">
                <b><%= listingdetails.title %></b><br>
                <%= listingdetails.description %><br>
                &#8377; <%= listingdetails.price.toLocaleString("en-IN") %><br>
                <%= listingdetails.location %>
                </p>
            </div>
          </div>
          <div class="btns">
            <a href="/listing/<%= listingdetails._id%>/edit" class="btn btn-dark col-1 offset-3 mb-5">Edit this villa</a>
    
            <form method="post" action="/listing/<%=listingdetails._id%>?_method=Delete">
                <button class="btn btn-dark add-btn offset-3 mb-5">Delete Villa</button>
            </form>
        </div>
    </div>
    <hr>


    <div class="col-8 offset-3">
        <h4>Reviews</h4>
        <form method="POST" action="/listing/<%=listingdetails._id%>/reviews" novalidate class="needs-validation"><br>
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"/>
            </div><br>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">comment</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please Some Comment!</div>
            </div><br>
            <button class="btn btn-outline-danger">Submit</button>
        
        </form>
    </div><hr>
    <h4><b>All Reviews</b></h4><br>
    <div class="row">
    <% for(review of listingdetails.reviews) {%>
     <div class="card col-5 mb-3 ms-5">
        <div class="card-body">
          <h5 class="card-title">john doe</h5>
          <p class="card-text mt-4"><%= review.rating %>&#9733;</p>
          <p class="card-text"><%= review.comment %></p>  
        </div>
        <form class="mb-3 mt-3" method="post" action="/listing/<%=listingdetails._id%>/reviews/<%=review._id%>?_method=DELETE">
            <button class="btn btn-sm btn-outline-dark">Delete</button>
        </form>
    </div>
    <% } %>
</div>
</div>
<script src="/js/script.js"></script>
</body>

